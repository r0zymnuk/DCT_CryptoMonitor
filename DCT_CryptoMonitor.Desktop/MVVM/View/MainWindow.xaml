<Window x:Class="DCT_CryptoMonitor.Desktop.MVVM.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:DCT_CryptoMonitor.Desktop.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <ComboBox Grid.Column="0" Grid.Row="0"
                  x:Name="ComboBox"
                  ItemsSource="{Binding Path=Currencies}"
                  SelectedItem="{Binding Path=SelectedCurrency}"
        />
        <Button Grid.Row="0" Grid.Column="1" Click="ButtonBase_OnClick">Yeah I work</Button>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <DataGrid ItemsSource="{Binding Path=Coins}">
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
